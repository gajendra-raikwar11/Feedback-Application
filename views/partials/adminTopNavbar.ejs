    .navbar {
    height: calc(60px + 1.8px);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 900; /* Increased z-index so nothing overlaps */
    background: #002f56 !important;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1) !important;
    padding-top: 0.9rem;
    padding-bottom: 0.9rem;
    }  
    /* Fix content position */
