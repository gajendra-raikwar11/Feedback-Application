    </div>
    
    <!-- Navigation items -->
    <div class="nav-item active">
        <a href="/dashboard" style="text-decoration: none; color: white;"><i class="fas fa-tachometer-alt me-2"></i> Dashboard</a>
    </div>
    <div class="nav-item">
        <a href="/students" style="text-decoration: none; color: white;"><i class="fas fa-user-graduate me-2"></i> Students</a>
    </div>
    <div class="nav-item">
        <a href="/forms" style="text-decoration: none; color: white;"><i class="fas fa-clipboard-list me-2"></i> Forms</a>
    </div>
    <div class="nav-item">
