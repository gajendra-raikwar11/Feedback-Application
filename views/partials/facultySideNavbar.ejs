<div class="sidebar" id="sidebar">
  <div class="logo">
    <h4>Faculty Portal</h4>
  </div>
  
  <div class="nav-menu">
    <div class="nav-item <%= locals.activePage === 'dashboard' ? 'active' : '' %>">
      <a href="/faculty/dashboard" class="nav-link">
        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
      </a>
    </div>
    <div class="nav-item <%= locals.activePage === 'students' ? 'active' : '' %>">
      <a href="/faculty/students" class="nav-link">
        <i class="fas fa-user-graduate me-2"></i> Students
      </a>
    </div>
  </div>
  
  <div class="sidebar-spacer"></div>
  
  <div class="nav-item">
    <a href="/faculty/logout" class="nav-link">
      <i class="fas fa-sign-out-alt me-2"></i> Logout
    </a>
  </div>

  <!-- Faculty Info Section -->
  <div class="faculty-info">
    <div class="avatar"><%= faculty.name.split('.')[1].trim().charAt(0) %></div>
    <div class="faculty-text">
      <p class="faculty-name"><%= faculty.name %></p>
      <p class="faculty-email"><%= faculty.email%></p>
    </div>
  </div>
</div>

<style>
  /* Make the entire nav item clickable */
  .sidebar .nav-item {
    position: relative;
    padding: 0;
    margin: 5px 0;
  }

  .sidebar .nav-link {
    display: block;
    width: 100%;
    height: 100%;
    padding: 10px 15px;
    color: white;
    text-decoration: none;
  }

  /* Optional hover effect */
  .sidebar .nav-item:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  /* Style for active items */
  .sidebar .nav-item.active {
    background-color: rgba(255, 255, 255, 0.2);
  }

  /* Faculty Info */
  .sidebar {
    display: flex;
    flex-direction: column;
    height: 100vh;
  }
  
  /* Add this to push logout to bottom */
  .sidebar-spacer {
    flex-grow: 1;
  }
  
  /* Nav menu container */
  .nav-menu {
    flex-shrink: 0;
  }

  .faculty-info {
    border-top: 1px solid white;
    padding: 15px;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    color: white;
    background-color: rgba(255, 255, 255, 0.05);
  }

  .faculty-info .avatar {
    background-color: #1e5a92;
    color: white;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    margin-right: 10px;
  }

  .faculty-info .faculty-text {
    overflow: hidden;
  }

  .faculty-info .faculty-name {
    margin: 0;
    font-weight: bold;
    font-size: 0.95em;
  }

  .faculty-info .faculty-email {
    margin: 5px 0 0;
    font-size: 0.8em;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #ccc;
  }
  
  /* Add basic structure for the logo */
  .logo {
    padding: 15px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .logo h4 {
    margin: 0;
  }
</style>