    <script>
        $(document).ready(function () {
            // Initialize variables
            let sectionCounter = <%= formData.sections ? formData.sections.length : 0 %>;
            let questionCounter = 0;
            
            // Calculate the total question count across all sections
            <% if (formData.sections) { %>
                <% formData.sections.forEach(function(section) { %>
                    <% if (section.questions) { %>
                        questionCounter += <%= section.questions.length %>;
                    <% } %>
                <% }); %>
            <% } %>
            
            // Bootstrap modals
            const addSectionModal = new bootstrap.Modal(document.getElementById('addSectionModal'));
            const addQuestionModal = new bootstrap.Modal(document.getElementById('addQuestionModal'));
            
            // Toggle status text
            $('#formStatus').change(function () {
                $('.status-text').text($(this).is(':checked') ? 'Active' : 'Inactive');
                $(this).val($(this).is(':checked') ? 'active' : 'closed');
            });
    
            // Add semester
            $('#addSemesterBtn').click(function() {
                const semesterSelect = $('#semesterSelect');
                const semesterValue = semesterSelect.val();
                
                if (semesterValue) {
                    // Check if semester already exists
                    const exists = $('#assignedSemesters .assigned-item').filter(function() {
                        return $(this).data('semester') === semesterValue;
                    }).length > 0;
                    
                    if (!exists) {
                        // Hide empty message
                        $('#emptySemestersMessage').hide();
                        
                        const semesterHtml = `
                        <div class="assigned-item" data-semester="${semesterValue}">
                            <i class="fas fa-graduation-cap me-1"></i>
                            ${semesterValue}
                            <button type="button" class="btn btn-sm text-danger remove-assigned-item">
                                <i class="fas fa-times"></i>
                            </button>
                            <input type="hidden" name="semesters[]" value="${semesterValue}">
                        </div>
                        `;
                        
                        $('#assignedSemesters').append(semesterHtml);
                        semesterSelect.val('');
                    } else {
                        alert('This semester is already assigned to the form');
                    }
                }
            });
    
            // Add faculty member
            $('#addFacultyBtn').click(function () {
                const facultySelect = $('#facultySelect');
                const facultyId = facultySelect.val();
    
                if (facultyId) {
                    // Check if faculty already exists
                    const exists = $('#assignedFaculties .assigned-item').filter(function() {
                        return $(this).data('id') === facultyId;
                    }).length > 0;
                    
                    if (!exists) {
                        const facultyName = facultySelect.find('option:selected').text();
                        const facultyHtml = `
                        <div class="assigned-item" data-id="${facultyId}">
                            <i class="fas fa-user-tie me-1"></i>
                            ${facultyName}
                            <button type="button" class="btn btn-sm text-danger remove-assigned-item">
                                <i class="fas fa-times"></i>
                            </button>
                            <input type="hidden" name="facultyAssigned[]" value="${facultyId.toString()}">
                        </div>
                        `;
                        
                        // Hide empty message if it's visible
                        $('#emptyFacultiesMessage').hide();
                        $('#assignedFaculties').append(facultyHtml);
                        facultySelect.val('');
                    } else {
                        alert('This faculty member is already assigned to the form');
                    }
                }
            });
              
            // Remove assigned item (faculty, section, semester) when the X is clicked
            $(document).on('click', '.remove-assigned-item', function () {
                const container = $(this).closest('.assigned-item').parent();
                $(this).closest('.assigned-item').remove();
                
                // Show empty message if no items are assigned
                if (container.attr('id') === 'assignedFaculties' && container.find('.assigned-item').length === 0) {
                    $('#emptyFacultiesMessage').show();
                }
                else if (container.attr('id') === 'assignedSections' && container.find('.assigned-item').length === 0) {
                    $('#emptySectionsMessage').show();
                }
                else if (container.attr('id') === 'assignedSemesters' && container.find('.assigned-item').length === 0) {
                    $('#emptySemestersMessage').show();
                }
                else if (container.attr('id') === 'assignedSubjects' && container.find('.assigned-item').length === 0) {
                    $('#emptySubjectsMessage').show();
                }
            });
    
            // Section assignment
            $('#addSectionBtn').click(function () {
                const sectionSelect = $('#sectionSelect');
                const sectionValue = sectionSelect.val();
                
                if (sectionValue) {
                    // Check if section already exists
                    const exists = $('#assignedSections .assigned-item').filter(function() {
                        return $(this).data('section') === sectionValue;
                    }).length > 0;
                    
                    if (!exists) {
                        const sectionHtml = `
                        <div class="assigned-item" data-section="${sectionValue}">
                            <i class="fas fa-layer-group me-1"></i>
                            ${sectionValue}
                            <button type="button" class="btn btn-sm text-danger remove-assigned-item">
                                <i class="fas fa-times"></i>
                            </button>
                            <input type="hidden" name="sectionsAssigned[]" value="${sectionValue}">
                        </div>
                        `;
                        
                        // Hide empty message if it's visible
                        $('#emptySectionsMessage').hide();
                        $('#assignedSections').append(sectionHtml);
                        sectionSelect.val('');
                    } else {
                        alert('This section is already assigned to the form');
                    }
                }
            });
            // Subject assignment (only for Academic forms)
$('#addSubjectBtn').click(function() {
    const subjectSelect = $('#subjectSelect');
    const subjectValue = subjectSelect.val();
    
    if (subjectValue) {
        // Check if subject already exists
        const exists = $('#assignedSubjects .assigned-item').filter(function() {
            return $(this).data('subject') === subjectValue;
        }).length > 0;
        
        if (!exists) {
            const subjectHtml = `
            <div class="assigned-item" data-subject="${subjectValue}">
                <i class="fas fa-book me-1"></i>
                ${subjectValue}
                <button type="button" class="btn btn-sm text-danger remove-assigned-item">
                    <i class="fas fa-times"></i>
                </button>
                <input type="hidden" name="subjects[]" value="${subjectValue}">
            </div>
            `;
            
            // Hide empty message if it's visible
            $('#emptySubjectsMessage').hide();
            $('#assignedSubjects').append(subjectHtml);
            subjectSelect.val('');
        } else {
            alert('This subject is already assigned to the form');
        }
    }
});

// Handle question type change
$('#questionType').change(function() {
    const questionType = $(this).val();
    
    // Show/hide options based on question type
    if (questionType === 'mcq' || questionType === 'dropdown' || questionType === 'rating') {
        $('#questionOptions').show();
        $('#gridOptions').hide();
    } else if (questionType === 'grid') {
        $('#gridOptions').show();
        $('#questionOptions').hide();
    } else {
        $('#questionOptions').hide();
        $('#gridOptions').hide();
    }
});

// Add new form section
$('#addFormSectionBtn').click(function() {
    // Reset form fields
    $('#sectionTitle').val('');
    $('#sectionDescription').val('');
    
    // Show modal
    addSectionModal.show();
});

// Save section
$('#saveSectionBtn').click(function() {
    const sectionTitle = $('#sectionTitle').val().trim();
    const sectionDescription = $('#sectionDescription').val().trim();
    
    if (sectionTitle) {
        sectionCounter++;
        const sectionId = `section-${sectionCounter}`;
        
        // Hide empty message if it exists
        $('#emptySectionsContainerMessage').hide();
        
        const sectionHtml = `
        <div class="form-section-container" id="${sectionId}" data-section-index="${sectionCounter - 1}">
            <div class="section-header">
                <h5>${sectionTitle}</h5>
                <div>
                    <button type="button" class="btn btn-sm btn-outline-primary add-question-btn" data-section="${sectionId}">
                        <i class="fas fa-plus"></i> Add Question
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-danger remove-section-btn">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>
            <div class="section-description mb-3">
                ${sectionDescription ? `<p class="text-muted">${sectionDescription}</p>` : ''}
            </div>
            <input type="hidden" name="sections[${sectionCounter - 1}][title]" value="${sectionTitle}">
            <input type="hidden" name="sections[${sectionCounter - 1}][description]" value="${sectionDescription}">
            <div class="questions-container">
                <div class="empty-container section-empty-message">
                    <i class="fas fa-question-circle"></i>
                    <p>No questions have been added to this section yet.</p>
                </div>
            </div>
        </div>
        `;
        
        $('#formSectionsContainer').append(sectionHtml);
        addSectionModal.hide();
    } else {
        alert('Section title is required');
    }
});

// Add question to section
$(document).on('click', '.add-question-btn', function() {
    // Reset form fields
    $('#questionText').val('');
    $('#questionType').val('rating');
    $('#questionRequired').prop('checked', true);
    $('#optionsText').val('');
    $('#gridRows').val('');
    $('#gridColumns').val('');
    
    // Hide option fields
    $('#questionOptions').show();
    $('#gridOptions').hide();
    
    // Set current section ID
    $('#currentSectionId').val($(this).data('section'));
    
    // Show modal
    addQuestionModal.show();
});

// Save question
$('#saveQuestionBtn').click(function() {
    const questionText = $('#questionText').val().trim();
    const questionType = $('#questionType').val();
    const questionRequired = $('#questionRequired').is(':checked');
    const sectionId = $('#currentSectionId').val();
    const sectionContainer = $(`#${sectionId}`);
    const sectionIndex = sectionContainer.data('section-index');
    
    if (!questionText) {
        alert('Question text is required');
        return;
    }
    
    let optionsHtml = '';
    let optionsInputs = '';
    
    // Handle different question types
    if (questionType === 'mcq' || questionType === 'dropdown' || questionType === 'rating') {
        const optionsText = $('#optionsText').val().trim();
        if (!optionsText) {
            alert('Options are required for this question type');
            return;
        }
        
        const options = optionsText.split(',').map(option => option.trim());
        optionsHtml = `<div class="question-options mt-2 mb-2">
            <div class="badge bg-light text-dark me-1">Options: ${options.join(', ')}</div>
        </div>`;
        
        options.forEach(option => {
            optionsInputs += `<input type="hidden" name="sections[${sectionIndex}][questions][${questionCounter}][options][]" value="${option}">`;
        });
    } else if (questionType === 'grid') {
        const rowsText = $('#gridRows').val().trim();
        const columnsText = $('#gridColumns').val().trim();
        
        if (!rowsText || !columnsText) {
            alert('Both rows and columns are required for Grid questions');
            return;
        }
        
        const rows = rowsText.split(',').map(row => row.trim());
        const columns = columnsText.split(',').map(column => column.trim());
        
        optionsHtml = `<div class="question-options mt-2 mb-2">
            <div class="badge bg-light text-dark me-1">Rows: ${rows.join(', ')}</div>
            <div class="badge bg-light text-dark">Columns: ${columns.join(', ')}</div>
        </div>`;
        
        rows.forEach(row => {
            optionsInputs += `<input type="hidden" name="sections[${sectionIndex}][questions][${questionCounter}][gridOptions][rows][]" value="${row}">`;
        });
        
        columns.forEach(column => {
            optionsInputs += `<input type="hidden" name="sections[${sectionIndex}][questions][${questionCounter}][gridOptions][columns][]" value="${column}">`;
        });
    } else if (questionType === 'yes_no') {
        optionsInputs += `<input type="hidden" name="sections[${sectionIndex}][questions][${questionCounter}][options][]" value="Yes">`;
        optionsInputs += `<input type="hidden" name="sections[${sectionIndex}][questions][${questionCounter}][options][]" value="No">`;
    }
    
    const questionHtml = `
    <div class="field-item question-item" data-question-index="${questionCounter}">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <div class="d-flex align-items-center">
                    <span class="badge ${questionRequired ? 'bg-danger' : 'bg-secondary'} me-2">
                        ${questionRequired ? 'Required' : 'Optional'}
                    </span>
                    <span class="badge bg-primary">${questionType.replace('_', ' ').toUpperCase()}</span>
                </div>
                <h5 class="mt-2">${questionText}</h5>
                ${optionsHtml}
                ${optionsInputs}
                <input type="hidden" name="sections[${sectionIndex}][questions][${questionCounter}][questionText]" value="${questionText}">
                <input type="hidden" name="sections[${sectionIndex}][questions][${questionCounter}][questionType]" value="${questionType}">
                <input type="hidden" name="sections[${sectionIndex}][questions][${questionCounter}][required]" value="${questionRequired}">
            </div>
            <div>
                <button type="button" class="btn btn-sm btn-outline-danger remove-question-btn">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        </div>
    </div>
    `;
    
    // Hide empty message if it's visible
    sectionContainer.find('.section-empty-message').hide();
    sectionContainer.find('.questions-container').append(questionHtml);
    
    questionCounter++;
    addQuestionModal.hide();
});

// Remove section
$(document).on('click', '.remove-section-btn', function() {
    if (confirm('Are you sure you want to remove this section and all its questions?')) {
        $(this).closest('.form-section-container').remove();
        
        // Show empty message if no sections
        if ($('.form-section-container').length === 0) {
            $('#emptySectionsContainerMessage').show();
        }
        
        // Reindex remaining sections
        $('.form-section-container').each(function(index) {
            $(this).attr('data-section-index', index);
            $(this).find('input[name^="sections["]').each(function() {
                const name = $(this).attr('name');
                const newName = name.replace(/sections\[\d+\]/, `sections[${index}]`);
                $(this).attr('name', newName);
            });
        });
    }
});

// Remove question
$(document).on('click', '.remove-question-btn', function() {
    if (confirm('Are you sure you want to remove this question?')) {
        const questionContainer = $(this).closest('.question-item');
        const sectionContainer = questionContainer.closest('.form-section-container');
        
        questionContainer.remove();
        
        // Show empty message if no questions
        if (sectionContainer.find('.question-item').length === 0) {
            sectionContainer.find('.section-empty-message').show();
        }
        
        // Reindex remaining questions in this section
        const sectionIndex = sectionContainer.data('section-index');
        sectionContainer.find('.question-item').each(function(qIndex) {
            $(this).attr('data-question-index', qIndex);
            $(this).find('input[name^="sections["]').each(function() {
                const name = $(this).attr('name');
                const newName = name.replace(/sections\[\d+\]\[questions\]\[\d+\]/, `sections[${sectionIndex}][questions][${qIndex}]`);
                $(this).attr('name', newName);
            });
        });
    }
});

// Form submission
$('#editFormForm').submit(function(e) {
    e.preventDefault();
    
    // Validate form
    const formTitle = $('#formTitle').val().trim();
    const formDeadline = $('#formDeadline').val();
    
    if (!formTitle) {
        alert('Form title is required');
        return;
    }
    
    if (!formDeadline) {
        alert('Submission deadline is required');
        return;
    }
    
    // Submit the form data via AJAX
    $.ajax({
        url: '/admin/forms/' + $('#formId').val() + '/update',
        type: 'POST',
        data: $(this).serialize(),
        success: function(response) {
    if (response && response.success === true) {
        alert('Form successfully updated!');
        window.location.href = '/admin/Total-Forms';
    } else {
        // If we get here, the form might have updated but response.success is falsy
        console.log('Response received:', response);
        alert('Form updated, but server returned an unexpected response.');
        window.location.href = '/admin/Total-Forms';
    }
},
        error: function(xhr) {
            alert('An error occurred while updating the form: ' + xhr.responseText);
        }
    });
});
